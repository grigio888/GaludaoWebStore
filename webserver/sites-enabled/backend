server {
    listen 80;
    server_name api.galudaowebstore.local api.galudaowebstore.com.br;

    if ($environment = production) {
        return 301 https://api.galudaowebstore.com.br$request_uri;
    }

    include /etc/nginx/includes/backend.conf;
}

